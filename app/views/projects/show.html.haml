%h2.title
  = link_to "Projects ", projects_path
  = "/ #{@project.name}" 
.google_ad_show
  %center
    = render "shared/google_ad_show"
.listing
  %p#notice= notice

  %center.white_box
    %h2= @project.name
    %h5= "a project by: #{@project.user.username}" if @project.user
  %center
    = image_tag(@project.image.url(:large), :class => "imgshadow")
  %p
  .white_box
    = @project.description.html_safe
    %p

  - if @project.gallery.present?
    %hr
    %center
      %h2 Image Gallery
      .spacer
      .row-fluid
        - @project.gallery.images.each do |image|
          .inline
            %center
              .row-fluid
                = link_to image_tag(image.attachment.url(:thumb), :class => "imgshadow"), image.attachment.url
  %hr
%p
= render :partial => "shared/disqus", :locals => { title: @project.name }
%p
  = link_to 'Back', :back

