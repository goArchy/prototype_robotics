.container
  .row
    .span9
      %h2 Featured Projects
      = render 'shared/content_slider', :articles => @featured_articles
    .span7
      %h2 Recent Articles
      - @articles.each do |article|
        .article
          .article_image= link_to image_tag(article.image.url(:thumb)), article_path(article)
          %h4= article.title
          =h truncate(article.body, :length => 150 )
          %p
    .space= link_to "view all articles", articles_path

  .row
    %h2 Recent Projects
    - @projects.each do |project|
      .span-one-third
        %h4= project.name
        .project_image= link_to image_tag(project.image.url(:thumb)), project_path(project)
        = project.description
  .space= link_to "view all projects", projects_path

  .row
    %h2 Recent Tutorials
    - @tutorials.each do |tutorial|
      .span-one-third
        %h4= tutorial.name
        .project_image= link_to image_tag(tutorial.image.url(:thumb)), tutorial_path(tutorial)
        = tutorial.description
  .space= link_to "view all tutorials", tutorials_path

:javascript
  $(window).load(function() {
    $('.flexslider').flexslider();
    });
