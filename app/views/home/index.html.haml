.container
  = render 'shared/content_slider', :posts => @featured_posts
.row
  %h2 Recent Posts
  - @posts.each do |post|
    .span-one-third
      %h4= post.title
      .post_image= link_to image_tag(post.image.url(:thumb)), post_path(post)
      %span.post_text= post.body
.row
  %h2 Recent Projects
  - @projects.each do |project|
    .span-one-third
      %h4= project.title
      .project_image= link_to image_tag(project.image.url(:thumb)), project_path(project)
      %span.project_text= project.body

:javascript
  $(window).load(function() {
    $('.flexslider').flexslider();
    });
