%hr
.row-fluid
  .span6
    %h2.inline Recent Projects
    %h5.inline= link_to "view all projects", projects_path
    - @projects.each do |project|
      .well
        .row-fluid
          .span3.pad
            = link_to image_tag(project.image.url(:thumb), :class => "imgshadow"), project_path(project)
          .span9
            %h4= link_to project.name, project_path(project)
            =h truncate(project.description, :length => 100 ).html_safe
  .span6
    %h2.inline Recent Tutorials
    %h5.inline= link_to "view all tutorials", tutorials_path
    - @tutorials.each do |tutorial|
      .well
        .row-fluid
          .span3.pad
            = link_to image_tag(tutorial.image.url(:thumb), :class => "imgshadow"), tutorial_path(tutorial)
          .span9
            %h4= link_to tutorial.name, tutorial_path(tutorial)
            =h truncate(tutorial.description, :length => 100 ).html_safe

