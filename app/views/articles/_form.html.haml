= simple_form_for(@article) do |f|
  = f.error_notification

  .fieldset
    .clearfix
      = f.label :name
      .input= f.text_field :name
    .clearfix
      = f.label :description
      .input= f.text_area :description
    .clearfix
      = f.label :featured
      .input= f.check_box :featured
    .clearfix
      = f.label :image
      .input= f.file_field :image

  .actions
    = f.button :submit
