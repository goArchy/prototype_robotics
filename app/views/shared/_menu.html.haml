.navbar
  .navbar-inner
    .container
      %ul.nav
        %li= link_to "Home", root_path
        %li= link_to "About me", '/about_me'
        %li= link_to "Links", '/links'
        %li= link_to "Blog", articles_path
        %li= link_to "Projects", projects_path
        %li= link_to "Tutorials", tutorials_path

      = form_tag(search_path, :class => "navbar-search pull-right") do
        = text_field_tag "search"
        = submit_tag "search"

      %ul.nav.pull-right
        - if user_signed_in?
          %li= link_to "Welcome #{current_user.username}", '/account'
          %li= link_to 'Logout', spree.destroy_user_session_path
        - else
          %li= link_to "Login", spree.new_user_session_path
          %li= link_to "Register", spree.new_user_registration_path


