<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "less" %>
    <%= csrf_meta_tags %>
    <div class="container">
      <%= image_tag "logo_new_small.png", :width => "600px" %>
      <% if current_user %>
        <%= link_to('Sign out', main_app.destroy_user_session_path, :method => :delete, :class => "btn danger session pull-right") %>
      <% else %>
        <%= link_to('Sign In', main_app.new_user_session_path, :class => "btn success session pull-right") %>
      <% end %>
      <%= render :partial => 'shared/menu'%>
    </div>
  </head>
  <body>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
      <br class="clear">
    </div>
  </body>
</html>
