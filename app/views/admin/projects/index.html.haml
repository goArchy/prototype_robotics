.board
  %h1.inline Admin Projects List
  .pull-right= link_to 'New Project', new_admin_project_path, :class => "btn btn-success"

  %table
    %tr
      %th Image
      %th Name
      %th Type
      %th Actions

    - @projects.each do |project|
      %tr
        %td= link_to image_tag(project.image.url(:thumb)), project_path(project)
        %td= link_to project.name, admin_project_path(project)
        %td= project.category
        %td
          = link_to 'Edit', edit_admin_project_path(project), :class => "btn btn-warning"
          = link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-danger"

  %br

  = link_to 'New Project', new_admin_project_path
