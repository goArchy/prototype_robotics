= form_for ([:admin, @article]) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this tutorial from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend
      Article
    .clearfix
      = f.label :name
      .input= f.text_field :name
    .clearfix
      = f.label :description
      .input= f.cktext_area :description
    .clearfix
      .inline
        = f.check_box :featured
      .inline
        = f.label :featured
    .clearfix
      .inline
        .input= f.check_box :published
      .inline
        = f.label :published
    - if @article.image
      = image_tag(@article.image.url(:thumb), :class => "imgshadow")
    .clearfix
      = f.label :image
      .input= f.file_field :image

  .actions
    = f.submit :submit, :class => 'btn primary'
    = link_to 'Back', tutorials_path, :class => 'btn'

