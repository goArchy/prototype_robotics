%h2.title
  = link_to "Articles ", articles_path
  = "/ #{@article.name}" 
.listing
  %p#notice= notice

  %center.white_box
    %h3= @article.name
  %center
    = image_tag(@article.image.url(:slider), :class => "imgshadow")
  %p
  .heading= @article.description.html_safe

  - if @article.galleries.present?
    - @object = @article
    = render 'shared/gallery', :content => @object
%p
= render :partial => "shared/disqus", :locals => { title: @article.name }
%p
  = link_to 'Back', :back

