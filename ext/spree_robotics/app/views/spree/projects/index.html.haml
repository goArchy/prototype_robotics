.board
  %h1 Listing projects

  %table.table-striped
    %tr
      %th Name
      %th Description
      %th Type
      - if current_user && current_user.has_role?("admin")
        %th
        %th

    - @projects.each do |project|
      %tr
        %td= link_to project.name, project
        %td=h truncate(project.description.html_safe, :length => 500)
        %td= project.category
        - if current_user && current_user.has_role?("admin")
          %td= link_to 'Edit', edit_project_path(project)
          %td= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete
        - elsif current_user && current_user.id == project.spree_user_id
          %td= link_to 'Edit', edit_project_path(project)

  %br

  - if current_user
    = link_to 'New Project', new_project_path
