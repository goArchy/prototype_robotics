%h2.title
  = link_to "Projects ", projects_path
  = "/ #{@project.name}" 
.listing
  %p#notice= notice

  %center.white_box
    %h3= @project.name
  %center
    = image_tag(@project.image.url(:slider), :class => "imgshadow")
  %p
  .white_box
    = @project.description.html_safe
    %p

  - if @project.galleries.present?
    - @object = @project
    = render 'shared/gallery', :content => @object

  %p
    = link_to 'Back', :back

